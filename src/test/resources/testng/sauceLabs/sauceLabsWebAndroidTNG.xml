<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Android Web Sauce Labs mobile testing Suite">
    <parameter name="cloudName" value="Sauce Labs"/>
    <parameter name="appType" value="web"/>
    <parameter name="deviceName" value="Samsung_Galaxy_S9_free"/>
    <parameter name="platformName" value="Android"/>
    <parameter name="platformVersion" value="9.0"/>
    <parameter name="browserName" value="Chrome"/>
    <test name="Android Sauce Labs Web tests">
        <groups>
            <run>
                <include name="web"/>
            </run>
        </groups>

        <packages>
            <package name="scenarios"/>
        </packages>
    </test>
</suite>
